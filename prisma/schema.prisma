generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model institutions {
  id                  Int       @id @default(autoincrement())
  cid                 String    @unique
  data_id             String?
  title               String
  categories          Json?
  website             String?
  phone               String?
  review_rating       Float?
  review_count        Int?
  price_range         String?
  description         String?
  attributes          Json?
  owner_name          String?
  is_verified         Boolean   @default(false)
  address             String?
  city                String?
  postal_code         String?
  state               String?
  country             String?
  latitude            Float?
  longitude           Float?
  created_at          DateTime  @default(now())
  updated_at          DateTime

  reviews       reviews[]

}


model reviews {
  id               String       @id // Google Review Resource Name
  institution_id   Int
  rating           Int
  text             String?      @db.Text
  language         String?
  author_name      String
  author_photo_url String?
  relative_time    String?
  publish_time     DateTime

  institution      institutions @relation(fields: [institution_id], references: [id])

  @@index([institution_id])
}
